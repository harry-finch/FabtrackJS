<!doctype html>
<html lang="en" data-bs-theme="auto">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <meta name="description" content="" />
        <meta name="author" content="Stéphane Muller" />
        <title>Fabtrack signin</title>

        <script src="../../javascripts/color-mode-toggler.js"></script>

        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@docsearch/css@3" />
        <link rel="stylesheet" href="../stylesheets/main.css" />
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
            crossorigin="anonymous"
        />
    </head>

    <body class="d-flex align-items-center bg-body-tertiary py-4">
        <% include ../includes/light-dark.html %>
        <main class="form-signin w-100 m-auto">
            <form action="/reset" method="post">
                <img class="mb-4" src="https://getbootstrap.com/docs/5.3/assets/brand/bootstrap-logo.svg" alt="" width="72" height="57" />
                <h1 class="h3 fw-normal mb-3">Recover your password</h1>

                <% if (locals.error) { %>
                <div class="alert alert-warning" role="alert"><%= error %></div>
                <% } %>

                <div class="form-floating">
                    <input type="email" class="form-control" id="mail" name="mail" placeholder="Email" required />
                    <label for="mail">Email</label>
                </div>

                <button class="btn btn-primary w-100 py-2" type="submit">Recover</button>
                <p class="text-body-secondary mb-3 mt-5">&copy; Stéphane Muller 2024</p>
            </form>
        </main>
        <script
            src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
            integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
            crossorigin="anonymous"
        ></script>
        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
            integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
            crossorigin="anonymous"
        ></script>
    </body>
</html>
